<body>
    <div class="level-badge" id="levelDisplay">暁の明星 (Lv.1)</div>
    <h2 class="header">Oshi-Log : Akatsuki</h2>

    <div class="card">
        <div style="font-size: 0.8em; color: #999;">現在の待ち人数</div>
        <input type="number" id="currentWait" placeholder="0" oninput="updatePrediction()">
        <div class="prediction" id="result">数値を入力してください</div>
        <button onclick="handleSuccess()">勝利！(入室成功)</button>
    </div>

    <div class="quote">“徳を積み、奇跡を待つ時間です。”</div>

    <script>
        let exp = 0;
        function updatePrediction() {
            const wait = document.getElementById('currentWait').value;
            if (wait > 0) {
                // 仮の予測ロジック（実際は過去データと照合）
                const mins = Math.ceil(wait / 100); 
                document.getElementById('result').innerText = `推定入室まで: あと ${mins} 分`;
            }
        }

        function handleSuccess() {
            exp += 50;
            const lv = Math.floor(exp / 100) + 1;
            document.getElementById('levelDisplay').innerText = `暁の明星 (Lv.${lv})`;
            alert("おめでとうございます！最高の愛を伝えてきてください。");
        }
    </script>
